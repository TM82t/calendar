<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3>予定の編集</h3>
    </div>

    <div class="col-md-12">
      <%= form_with(model: @event, local: true) do |form| %>
        <div class="title">
          <div class="form-tag">
            タイトル
          </div>
          <%= form.text_field :title %>
        </div>

        <div class="content">
          <div class="form-tag">
            内容
          </div>
          <%= form.text_area :content %>
        </div>

        <div class="time">
          <div class="form-tag">
            日時
          </div>
          <%= form.datetime_select :start_time %>
        </div>

        <div class="submit">
          <%= form.submit %>
        </div>
      <% end %>

    </div>

    <div class="col-md-5">
      <%= link_to '予定に戻る', event_path(@event.id), class: "btn btn-sm btn-info" %>
    </div>
  </div>
</div>