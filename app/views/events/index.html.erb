<div class="container">
  <div class="toppage">
    <h1 class="top">カレンダー</h1>
    </br>

    <div class="row">
      <div class="col-md-4">
      	<h3>
      	  今後の予定一覧
      	</h3>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>日程</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td></td>
                <td><%= link_to event.title , event %></td>
                <td><%= event.start_time.strftime("%m-%d") %></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        </br>

        <%= form_with(model: @event, local: true) do |form| %>
          <div class="title">
            <div class="form-tag">
              タイトル
            </div>
            <%= form.text_field :title %>
          </div>

          <div class="content">
            <div class="form-tag">
              内容
            </div>
            <%= form.text_field :content %>
          </div>

          <div class="time">
            <div class="form-tag">
              日時
            </div>
            <%= form.datetime_select :start_time %>
          </div>
          
          <div class="submit">
            <%= form.submit %>
          </div>
        <% end %>
      </div>

      </br>


      <br>
      <div class="col-md-8">
        <%= month_calendar events: @events do |date, events| %>
          <%= date.day %>

          <% events.each do |event| %>
            <div>
              <%= link_to event.title, event %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>